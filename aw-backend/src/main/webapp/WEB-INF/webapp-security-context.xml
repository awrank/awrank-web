<beans:beans xmlns="http://www.springframework.org/schema/security"
             xmlns:beans="http://www.springframework.org/schema/beans"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://www.springframework.org/schema/beans
                    http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
                    http://www.springframework.org/schema/security
                    http://www.springframework.org/schema/security/spring-security-3.1.xsd">

    <http use-expressions="true">
        <intercept-url pattern="/admin/**" access="supervisor"/>
        <intercept-url pattern="/console/**" access="user"/>
        <form-login/>
    </http>

    <authentication-manager>
        <authentication-provider>
            <user-service>
                <user name="admin-only" password="111" authorities="supervisor"/>
                <user name="admin-user" password="222" authorities="supervisor, user"/>
                <user name="user1" password="333" authorities="user"/>
                <user name="user2" password="444" authorities="user"/>
            </user-service>
        </authentication-provider>
    </authentication-manager>
</beans:beans>