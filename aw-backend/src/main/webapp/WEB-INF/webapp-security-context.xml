<beans:beans xmlns="http://www.springframework.org/schema/security"
			 xmlns:beans="http://www.springframework.org/schema/beans"
			 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
			 xsi:schemaLocation="http://www.springframework.org/schema/beans
                    http://www.springframework.org/schema/beans/spring-beans-3.2.xsd


                    http://www.springframework.org/schema/security
                    http://www.springframework.org/schema/security/spring-security-3.1.xsd">

	<!-- todo: ROLE_SPECTATOR for registered but not activated users -->

	<!-- anonymous login -->
	<http pattern="/login.jsp*" security="none"/>
	<!-- todo: probably, not necessary anymore -->
	<http pattern="/index*" security="none"/>

	<!-- Stateless RESTful service using Basic authentication -->
	<!--<http pattern="/rest/**" access-denied-page="/403.jsp">-->
	<!--<intercept-url pattern='/**' access="ROLE_USER, ROLE_ADMIN"/>-->
	<!--<http-basic/>-->
	<!--</http>-->

	<!-- Additional filter chain for normal users, matching all other requests -->
	<http pattern="/**" access-denied-page="/403.jsp" use-expressions="true" auto-config="true"
		  authentication-manager-ref="authenticationManager">
		<intercept-url pattern="/index*" access="permitAll"/>
		<!-- intercept-url pattern="/user/*" access="hasRole('ROLE_USER')"/ -->

		<intercept-url pattern="/rest/language" access="permitAll" method="GET"/>
		<intercept-url pattern="/rest/dictionary" access="permitAll" method="GET"/>
		<intercept-url pattern="/rest/product" access="permitAll" method="GET"/>
		<intercept-url pattern="/rest/payment_system" access="permitAll" method="GET"/>
		<intercept-url pattern="/rest/**" access="permitAll"/>
		<!--  hasRole('ROLE_ADMIN') -->

		<intercept-url pattern="/user/add" access="permitAll"/>
		<intercept-url pattern="/admin/*" access="hasRole('ROLE_ADMIN')"/>

		<form-login login-page="/login"
					default-target-url="/welcome"
					authentication-failure-url="/loginFailed"/>
		<logout logout-url="/logout" logout-success-url="/index.jsp"/>
		<!--     <intercept-url pattern="/login" access="IS_AUTHENTICATED_ANONYMOUSLY"/> -->
		<session-management session-fixation-protection="newSession">
			<concurrency-control max-sessions="1" error-if-maximum-exceeded="true"/>
		</session-management>

	</http>

	<!-- Just one at the same time can be used, not both! -->

	<global-method-security jsr250-annotations="enabled" authentication-manager-ref="authenticationManager"/>


	<!--  global-method-security pre-post-annotations="enabled" / -->

	<authentication-manager alias="authenticationManager">
		<authentication-provider ref="awRankingAuthenticationProvider"/>
	</authentication-manager>

	<beans:bean id="awRankingAuthenticationProvider"
				class="com.awrank.web.backend.authentication.AWRankingAuthenticationProviderImpl">
		<beans:property name="userDetailsService" ref="awRankingUserDetailsService"/>
	</beans:bean>
	<beans:bean id="awRankingUserDetailsService"
				class="com.awrank.web.backend.authentication.AWRankingUserDetailsService"/>
</beans:beans>