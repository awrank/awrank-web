<beans:beans xmlns="http://www.springframework.org/schema/security"
             xmlns:beans="http://www.springframework.org/schema/beans"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xmlns:context="http://www.springframework.org/schema/context"
             xsi:schemaLocation="http://www.springframework.org/schema/beans
                    http://www.springframework.org/schema/beans/spring-beans-3.2.xsd
                     http://www.springframework.org/schema/context
            		http://www.springframework.org/schema/context/spring-context.xsd
                    http://www.springframework.org/schema/security
                    http://www.springframework.org/schema/security/spring-security-3.1.xsd">

    <!-- todo: ROLE_SPECTATOR for registered but not activated users -->

    <!-- anonymous login -->
    <http pattern="/login.jsp*" security="none"/>

  
    <!-- Stateless RESTful service using Basic authentication -->
    <http pattern="/rest/**" access-denied-page="/403.jsp">
        <intercept-url pattern='/**' access="ROLE_USER, ROLE_ADMIN"/>
        <http-basic/>
    </http>

    <!-- Additional filter chain for normal users, matching all other requests -->
    <http pattern="/**" access-denied-page="/403.jsp" use-expressions="true" auto-config="true" authentication-manager-ref="authenticationManager">
        <intercept-url pattern="/index*" access="permitAll"/>
        <!-- intercept-url pattern="/user/*" access="ROLE_USER"/ -->
        <intercept-url pattern="/user/add" access="permitAll"/>
        <intercept-url pattern="/admin/*" access="ROLE_ADMIN"/>

        <form-login login-page="/login.jsp"
                    default-target-url="/welcome"
                    authentication-failure-url="/loginFailed"/>
        <logout logout-url="/logout" logout-success-url="/index.jsp"/>
        
	    <session-management session-fixation-protection="newSession" >
	        <concurrency-control max-sessions="1" error-if-maximum-exceeded="true" />
	    </session-management>
	  
    </http>
 
 <!-- Just one at the same time can be used, not both! -->
 
 	<global-method-security jsr250-annotations="enabled" authentication-manager-ref="authenticationManager"/>
 
 	  
 	 <!--  global-method-security pre-post-annotations="enabled" / -->

    <authentication-manager alias="authenticationManager">
        <authentication-provider ref="awRankingAuthenticationProvider" />
    </authentication-manager>

	<beans:bean id="awRankingAuthenticationProvider" class="com.awrank.web.backend.authentication.AWRankingAuthenticationProviderImpl">
	 		<beans:property name="userDetailsService" ref="awRankingUserDetailsService" />
	 		<!-- user-service>
	                <user name="admin" password="pass" authorities="ROLE_ADMIN, ROLE_USER"/>
	                <user name="user1" password="1111" authorities="ROLE_USER"/>
	                <user name="user2" password="2222" authorities="ROLE_USER" disabled="true" />
	        </user-service -->
	</beans:bean>
     <beans:bean id="awRankingUserDetailsService" class="com.awrank.web.backend.authentication.AWRankingUserDetailsService">
     	<!-- beans:property name="userService" ref="userServiceImpl" />
     	<beans:property name="userRoleService" ref="userRoleServiceImpl" />
     	<beans:property name="entryPointService" ref="entryPointServiceImpl" /-->
     </beans:bean>           
     <beans:bean id="userServiceImpl" name="userServiceImpl" class="com.awrank.web.model.service.impl.UserServiceImpl" />
     <beans:bean id="userRoleServiceImpl" name="userRoleServiceImpl" class="com.awrank.web.model.service.impl.UserRoleServiceImpl" />
     <beans:bean id="entryPointServiceImpl" name="entryPointServiceImpl" class="com.awrank.web.model.service.impl.EntryPointServiceImpl" />
  
</beans:beans>